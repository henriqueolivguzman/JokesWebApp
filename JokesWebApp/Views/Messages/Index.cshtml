@model JokesWebApp.Models.Message

@ViewData["Title"] "Messages";

<h1>@ViewData["Title"]</h1>

<h2>Would you like text a message for us ? </h2> 

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMessage">
            <div class="form-group">
                <label asp-for="UserName">User</label>
                <input asp-for="UserName" />
            </div>
            <div class="form-group">
                <label asp-for="TextMessage">Type your message</label>
                <input class="col-md-10" asp-for="TextMessage" />
            </div>
            <div class="form-group">
                <input type="submit" value="AddMessage" class="btn btn-default" />
            </div>
        </form>


    </div>
</div>